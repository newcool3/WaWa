@model ReserverRideVar01.Models.Member

@{
    ViewData["Title"] = "register";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Admin panel</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h1>註冊新會員</h1>
                        <div class="row">
                            <div class="col-md-4">
                                <form asp-action="register">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="MemberName" class="control-label"></label>
                                        <input asp-for="MemberName" class="form-control" id="account1" />
                                        <span asp-validation-for="MemberName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="MemberEmail" class="control-label"></label>
                                        <input asp-for="MemberEmail" class="form-control" id="email" />
                                        <span asp-validation-for="MemberEmail" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="MemberPhone" class="control-label"></label>
                                        <input asp-for="MemberPhone" class="form-control" id="phone" />
                                        <span asp-validation-for="MemberPhone" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="MemberPassword" class="control-label"></label>
                                        <input asp-for="MemberPassword" class="form-control" id="pwd" />
                                        <span asp-validation-for="MemberPassword" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="MemberAddress" class="control-label"></label>
                                        <input asp-for="MemberAddress" class="form-control" />
                                        <span asp-validation-for="MemberAddress" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="MemberBirthday" class="control-label"></label>
                                        <input asp-for="MemberBirthday" type="date" class="form-control" id="birth" />
                                        <span asp-validation-for="MemberBirthday" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="MemberNumberID" class="control-label"></label>
                                        <input asp-for="MemberNumberID" class="form-control" id="numberId" />
                                        <span asp-validation-for="MemberNumberID" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="MemberType" class="control-label"></label>
                                        <input asp-for="MemberType" class="form-control" id="type" />
                                        <span asp-validation-for="MemberType" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="註冊" class="btn btn-success" />
                                        <input type="button" value="Demo註冊" id="registerDemo" />
                                    </div>
                                    <div>
                                        <a asp-action="List" type="button" class="btn btn-primary">回到列表</a>
                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>

            </div>

        </div>

    </div>

</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


<script>
    $("#registerDemo").click(function () {
        $("#type").val("一般會員");
        $("#account1").val("托尼");
        $("#email").val("Tony@gmail.com");
        $("#pwd").val("Tony");
        $("#birth").val("1991-01-09");
        $("#numberId").val("C222222222");
        $("#phone").val("0922555666");
    });
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}