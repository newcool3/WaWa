@model IEnumerable<ReserverRideVar01.Models.Member>

@{
    ViewData["Title"] = "List";
}
<br>
<br>
<br>
<br>
<h2>會員資料一覽表</h2>

@using (Html.BeginForm())
{
    <p>
        關鍵字
        <input type="text" name="txtQuery" />
        <input type="submit" value="查詢" />
    </p>
}

<p>
    <a asp-action="register">註冊新的會員</a>
</p>
<div style="overflow-x:auto">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MemberName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MemberEmail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MemberPhone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MemberPassword)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MemberAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MemberBirthday)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MemberNumberID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MemberEnable)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.MemberPhoto)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.MemberType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MemberCreateDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MemberModifyDate)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberPassword)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberBirthday)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberNumberID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberEnable)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.MemberPhoto)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberCreateDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberModifyDate)
                    </td>
                    <td>
                        @Html.ActionLink("修改", "Edit", new { id = item.MemberID }) |
                        @Html.ActionLink("刪除", "Delete", new { id = item.MemberID }, new { onclick = "return confirm('確定要刪除嗎?')" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

